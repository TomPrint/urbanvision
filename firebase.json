{
  "hosting": {
      "target": "urbanvision",
      "public": "dist/urbanvision/",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/en/**",
          "destination": "/en/index.html"
        },
        {
          "source": "/pl/**",
          "destination": "/pl/index.html"
        },
        {
          "source": "**",
          "destination": "/pl/index.html"
        }
      ],
      "i18n": {
        "root": "/"
      }
    }
  }
  